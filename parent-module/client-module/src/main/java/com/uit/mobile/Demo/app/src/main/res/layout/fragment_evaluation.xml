<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_radius2"
        >

        <TextView
            android:id="@+id/textview_evaluation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Bảng đánh giá năng lực ứng viên"
            android:textColor="#FF8C00"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:text="Họ và tên người đánh giá:"
            android:textColor="#3DABD0"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/textview_info"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/border_radius3"
            android:hint="Vũ Mạnh Cường"
            android:textColor="#000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/textview_position"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:text="Chức vụ:"
            android:textColor="#3DABD0"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/textview_info2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/border_radius3"
            android:hint="CEO TopFactors"
            android:textColor="#000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/textview_company"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:text="Công ty:"
            android:textColor="#3DABD0"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/textview_info3"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/border_radius3"
            android:hint="TopFactors"
            android:textColor="#000"
            android:textSize="15sp"
            />





    </LinearLayout>
</LinearLayout>