<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_radius2"
        >

        <TextView
            android:id="@+id/textview_cv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Phan The Anh"
            android:textColor="#FF8C00"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="149dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/uploadcv" />
        <TextView
            android:id="@+id/textview_uploadcv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Upload CV"
            android:textColor="#3DABD0"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/textview_listcv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:text="Danh sách CV của ứng viên:"
            android:textColor="#FF8C00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageView
                android:layout_width="63dp"
                android:layout_height="65dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/listcv" />

            <TextView
                android:id="@+id/textview_cv1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="19dp"
                android:gravity="left"
                android:text="CV 1: Java Developer"
                android:textColor="#3DABD0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageView
                android:layout_width="63dp"
                android:layout_height="65dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/listcv" />

            <TextView
                android:id="@+id/textview_cv2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="19dp"
                android:gravity="left"
                android:text="CV 2: Java Developer"
                android:textColor="#3DABD0"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageView
                android:layout_width="63dp"
                android:layout_height="65dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/listcv" />

            <TextView
                android:id="@+id/textview_cv3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="19dp"
                android:gravity="left"
                android:text="CV 3: Java Developer"
                android:textColor="#3DABD0"
                android:textSize="14sp" />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>